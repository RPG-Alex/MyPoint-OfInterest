<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLocation"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="409dp"
        android:layout_height="67dp"
        android:layout_marginTop="108dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btn_accept"
        app:layout_constraintStart_toStartOf="@+id/btn_accept"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_accept"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="175dp"
        android:text="@string/add_this_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetLocation"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="339dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:text="@string/get_my_location"
        app:layout_constraintEnd_toEndOf="@+id/txtLocation"
        app:layout_constraintStart_toStartOf="@+id/txtLocation"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>